{% extends "base.twig" %}

{% block content %}
	<main class="py-100 py-xl-160">
		<div class="container">
			<h1 class="mb-40">{{ title }}</h1>
			<div class="row row-gap-20">
				{% for post in posts %}
					<div class="col-12 col-md-6 col-lg-4">
						<a href="{{ post.link }}">{{ post.title }}</a>
					</div>
				{% else %}
					<div class="col-12">
						<div class="text-center h3">{{ __('No results', 'fp') }}</div>
					</div>
				{% endfor %}
			</div>
			{% include "partial/pagination.twig" with {'classes' : 'mt-80'} %}
		</div>
	</main>
{% endblock %}
