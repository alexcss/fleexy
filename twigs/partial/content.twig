<article class="fp-post">
    {% if post.thumbnail %}
        <a href="{{ post.link }}" class="fp-post__image">
            <img src="{{ post.thumbnail.src|resize(448, 196) }}"
                 srcset="{{ post.thumbnail.src|resize(448, 196) }} 1x,
                      {{ post.thumbnail.src|resize(896, 392) }} 2x"
                 alt="{{ post.title }}">
        </a>
    {% endif %}
    <h3 class="fp-post__title">
        <a href="{{ post.link }}">
            {{ post.title }}
        </a>
    </h3>
    {% if post.categories %}
        <div class="fp-post__categories">
            {% for cat in post.categories %}
                <a href="{{ cat.link }}" title="{{ cat.title }}">{{ cat.name }}</a>
            {% endfor %}
        </div>
    {% endif %}
    {% if post.tags %}
        <div class="fp-post__tags">
            {% for tag in post.tags %}
                <a href="{{ tag.link }}" title="{{ tag.title }}">#{{ tag.name }}</a>
            {% endfor %}
        </div>
    {% endif %}
    <div class="fp-post__excerpt">{{ post.preview.read_more('') }}</div>
    <div class="row align-middle align-justify">
        <div class="column shrink">
            <a href="{{ post.link }}" class="fp-post__more">Read more</a>
        </div>
        <div class="column shrink fp-post__date">
            <time datetime="{{ post.date('Y-m-d') }}T{{ post.date('H:i:s') }}">{{ post.date }}</time>
        </div>
    </div>
</article>
