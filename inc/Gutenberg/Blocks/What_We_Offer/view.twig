<section {{ anchor }} {{ attribute }}>
	<svg class="position-absolute start-0 end-o bottom-100 w-100" xmlns="http://www.w3.org/2000/svg" width="1440" height="32" viewBox="0 0 1440 32" fill="none">
		<path d="M1440 32C1440 32 1001.46 32 720 32C438.545 32 0 32 0 32C0 32 438.545 0 720 0C1001.46 0 1440 32 1440 32Z" fill="var(--background-color)"/>
	</svg>
	<svg class="position-absolute start-0 end-o top-100 w-100" xmlns="http://www.w3.org/2000/svg" width="1440" height="32" viewBox="0 0 1440 32" fill="none">
		<path d="M0 0C0 0 438.545 0 720 0C1001.46 0 1440 0 1440 0C1440 0 1001.46 32 720 32C438.545 32 0 0 0 0Z" fill="var(--background-color)"/>
	</svg>

	{% if fields.title %}
		<div class="container">
			<div class="row">
				<div class="col-12 col-lg-10 offset-lg-1">
					<h2 class="fp-what-we-offer-block__title text-uppercase mb-56">{{ fields.title | highlight_text | e('wp_kses_post') }}</h2>
				</div>
			</div>
		</div>
	{% endif %}

	{% if fields.offers | length > 0 %}
		<div class="container">
			<div class="row flex-nowrap fp-no-scroll overflow-x-auto flex-xl-wrap mx-n16 mx-md-n24 g-0 g-16 g-xl-8">
				{% for offer in fields.offers %}
					<div class="col-11 col-sm-7 col-md-5 col-lg-4 col-xl-3">
						<article class="bg-position-center bg-size-cover bg-repeat-no-repeat d-flex align-items-end rounded-16 p-8 pt-180 h-100" style="background-image: url({{ offer.image.url }});">
							<div class="fp-blur text-white text-center rounded-8 px-8 py-24">
								<h3 class="font-family-body font-weight-600 mb-16">{{ offer.title | e('wp_kses_post') }}</h3>
								<p class="mb-24">{{ offer.description | e('wp_kses_post') }}</p>
								<a href="{{ offer.link.url|e('esc_url') }}" class="fp-button fp-button--sm" target="{{ offer.link.target|e('html_attr') ?: '_self' }}">
									{{ offer.link.title|e('wp_kses_post') }}
									<span class="icon-box">
										<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path fill-rule="evenodd" clip-rule="evenodd" d="M8.23429 2.63431C8.54671 2.32189 9.05324 2.32189 9.36566 2.63431L14.1657 7.43431C14.4781 7.74673 14.4781 8.25326 14.1657 8.56568L9.36566 13.3657C9.05324 13.6781 8.54671 13.6781 8.23429 13.3657C7.92187 13.0533 7.92187 12.5467 8.23429 12.2343L11.6686 8.79999L2.39998 8.8C1.95815 8.79999 1.59998 8.44182 1.59998 7.99999C1.59998 7.55817 1.95815 7.19999 2.39998 7.19999H11.6686L8.23429 3.76568C7.92187 3.45326 7.92187 2.94673 8.23429 2.63431Z" fill="currentColor"/>
										</svg>
									</span>
								</a>
							</div>
						</article>
					</div>
				{% endfor %}
			</div>
			<div class="pt-60 pb-60">
				<div class="border-bottom h-1 w-100"></div>
			</div>
		</div>
	{% endif %}

	<div class="container">
		<div class="row align-items-lg-center">
			<div class="col 12 col-lg-7 order-lg-2 mb-40">
				<div class="text-center">
					<h2 class="text-uppercase mb-24 mb-lg-40">{{ fields.second_title | highlight_text }}</h2>
					<p class="mb-40 mb-lg-24">{{ fields.description }}</p>
					<a href="{{ fields.link.url }}" class="fp-button fp-button--black" target="{{ fields.link.target ?: '_self' }}">
						{{ fields.link.title }}
						<span class="icon-box">
							<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" clip-rule="evenodd" d="M8.23429 2.63431C8.54671 2.32189 9.05324 2.32189 9.36566 2.63431L14.1657 7.43431C14.4781 7.74673 14.4781 8.25326 14.1657 8.56568L9.36566 13.3657C9.05324 13.6781 8.54671 13.6781 8.23429 13.3657C7.92187 13.0533 7.92187 12.5467 8.23429 12.2343L11.6686 8.79999L2.39998 8.8C1.95815 8.79999 1.59998 8.44182 1.59998 7.99999C1.59998 7.55817 1.95815 7.19999 2.39998 7.19999H11.6686L8.23429 3.76568C7.92187 3.45326 7.92187 2.94673 8.23429 2.63431Z" fill="currentColor"/>
							</svg>
						</span>
					</a>
				</div>
			</div>

			<div class="col-12 col-lg-4 offset-lg-1 order-lg-1 text-center position-relative">
				<picture>
					<source media="(max-width: 680px)"
							srcset="{{ fields.image.url|resize(375, 265, 'center')|towebp }} 1x, {{ fields.image.url|resize(564, 398, 'center')|towebp }} 1.5x"
							type="image/webp" width="375" height="265">
					<source media="(max-width: 680px)"
							srcset="{{ fields.image.url|resize(375, 265, 'center')|tojpg }} 1x, {{ fields.image.url|resize(564, 398, 'center')|tojpg }} 1.5x"
							width="375" height="265">
					<source media="(max-width: 992px)"
							srcset="{{ fields.image.url|resize(600, 422, 'center')|towebp }} 1x, {{ fields.image.url|resize(900, 633, 'center')|towebp }} 1.5x"
							type="image/webp" width="600" height="422">
					<source media="(max-width: 992px)"
							srcset="{{ fields.image.url|resize(600, 422, 'center')|tojpg }} 1x, {{ fields.image.url|resize(900, 633, 'center')|tojpg }} 1.5x"
							width="600" height="422">
					<img class="rounded-16" src="{{ fields.image.url|resize (438, 600, 'center') }}" srcset="{{ fields.image.url|resize (657, 900, 'center') }}" alt="{{ fields.image.alt }}" width="438" height="600">
				</picture>
			</div>
		</div>
	</div>
</section>
