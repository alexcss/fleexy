<section {{ anchor }} {{ attribute }}>
	<svg class="position-absolute start-0 end-o top-100 w-100 z-2" xmlns="http://www.w3.org/2000/svg" width="1440" height="32" viewBox="0 0 1440 32" fill="none">
		<path d="M0 0C0 0 438.545 0 720 0C1001.46 0 1440 0 1440 0C1440 0 1001.46 32 720 32C438.545 32 0 0 0 0Z" fill="var(--background-color)"/>
	</svg>
	<div class="container position-relative z-1">
		{% if fields.title %}
			<h2 class="text-uppercase text-center mb-56 mb-lg-80">{{ fields.title | highlight_text | e('wp_kses_post') }}</h2>
		{% endif %}

		{% if fields.advantages | length > 0 %}
			<div class="row flex-nowrap fp-no-scroll overflow-x-auto flex-xl-wrap mx-n16 mx-md-n24 g-0 g-16 g-xl-24 mb-56 mb-lg-80">
				{% for item in fields.advantages %}
					<div class="item col-11 col-sm-7 col-md-5 col-lg-4 col-xl-3">
						<article class="fp-advantages-item text-center bg-white border border-sandy-brown rounded-16 p-16 pb-32 pb-lg-40">
							<picture>
								<source media="(max-width: 680px)"
										srcset="{{ item.image.url|resize(200, 200, 'center')|towebp }} 1x, {{ item.image.url|resize(300, 300, 'center')|towebp }} 1.5x"
										type="image/webp" width="200" height="200">
								<source media="(max-width: 680px)"
										srcset="{{ item.image.url|resize(200, 200, 'center')|tojpg }} 1x, {{ item.image.url|resize(300, 300, 'center')|tojpg }} 1.5x"
										width="200" height="200">
								<img class="fp-advantages-item__image rounded-circle mb-24" src="{{ item.image.url|resize(290, 290, 'center') }}" srcset="{{ item.image.url|resize(435, 435, 'center') }}" alt="{{ item.image.alt|e('html_attr') }}" width="290" height="290">
							</picture>
							<h3 class="font-family-body font-weight-600 mb-16">{{ item.title | e('wp_kses_post') }}</h3>
							<p class="mb-0">{{ item.description | e('wp_kses_post') }}</p>
						</article>
					</div>
				{% endfor %}
			</div>
		{% endif %}

		{% if fields.description or (fields.cta.url and fields.cta.title) %}
			<div class="text-center">
				{% if fields.description %}
					<p class="mb-24">{{ fields.description | highlight_text | e('wp_kses_post') }}</p>
				{% endif %}

				{% if fields.cta.url and fields.cta.title %}
					<div class="text-center">
						<a class="fp-button fp-button--black" href="{{ fields.cta.url|e('esc_url') }}" target="{{ fields.cta.target|e('html_attr') ?: '_self' }}">
							{{ fields.cta.title|e('wp_kses_post') }}
							<span class="icon-box">
								<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path fill-rule="evenodd" clip-rule="evenodd" d="M8.23429 2.63431C8.54671 2.32189 9.05324 2.32189 9.36566 2.63431L14.1657 7.43431C14.4781 7.74673 14.4781 8.25326 14.1657 8.56568L9.36566 13.3657C9.05324 13.6781 8.54671 13.6781 8.23429 13.3657C7.92187 13.0533 7.92187 12.5467 8.23429 12.2343L11.6686 8.79999L2.39998 8.8C1.95815 8.79999 1.59998 8.44182 1.59998 7.99999C1.59998 7.55817 1.95815 7.19999 2.39998 7.19999H11.6686L8.23429 3.76568C7.92187 3.45326 7.92187 2.94673 8.23429 2.63431Z" fill="currentColor"/>
								</svg>
							</span>
						</a>
					</div>
				{% endif %}
			</div>
		{% endif %}

	</div>
	<svg data-draw-line data-duration="1.5" class="position-absolute z-0 top-50 start-50 translate-middle d-none d-md-block" width="1060" height="1020" viewBox="0 0 1060 1020" fill="none" xmlns="http://www.w3.org/2000/svg">
		<path opacity="0.25" d="M56.4349 713.003C311.194 207.241 669.496 -404.812 428.897 583.649C252.144 1309.81 819.529 -226.407 700.881 778.856C639.203 1301.43 966.101 569.013 1003.97 341.522" style="stroke: var(--highlight, #F6C67B)" stroke-width="112" stroke-linecap="round"/>
	</svg>
	<svg data-draw-line data-duration="1.2" class="position-absolute z-0 top-0 start-50 translate-middle-x d-md-none w-100 mt-12" width="375" height="598" viewBox="0 0 375 598" fill="none" xmlns="http://www.w3.org/2000/svg">
		<path opacity="0.1" d="M-59.5029 424.255C97.1383 113.282 317.444 -263.045 169.509 344.721C60.831 791.209 409.693 -153.35 336.742 464.746C298.818 786.059 499.815 335.722 523.102 195.847" style="stroke: var(--highlight, #F6C67B)" stroke-width="40" stroke-linecap="round"/>
	</svg>

</section>
