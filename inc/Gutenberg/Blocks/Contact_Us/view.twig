<section {{ anchor }} {{ attribute }} style="background-image: url({{ fields.background_image.url | resize(1920) }});">
	<svg class="position-absolute start-0 end-o top-100 w-100" xmlns="http://www.w3.org/2000/svg" width="1440" height="32" viewBox="0 0 1440 32" fill="none">
		<path d="M0 0C0 0 438.545 0 720 0C1001.46 0 1440 0 1440 0C1440 0 1001.46 32 720 32C438.545 32 0 0 0 0Z" fill="var(--background-color)"/>
	</svg>
	<div class="container">
		{% if fields.title %}
			<h1 class="h2 mb-40 mb-lg-80 text-uppercase text-center">{{ fields.title | highlight_text | e('wp_kses_post') }}</h1>
		{% endif %}
		{% if fields.form %}
			<div class="row justify-content-md-center">
				<div class="col-12 col-md-8 col-xl-6">
					<div class="fp-contact-form">
						{{ fn('do_shortcode', fields.form) }}
					</div>
				</div>
			</div>
		{% endif %}
	</div>
</section>
